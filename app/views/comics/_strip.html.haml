.comic
  %a{name: feed.hashtag}
  .meta
    %h1.title
      %a{href: feed.source_link, target: '_blank'}= feed.name
    - if item.title
      .strip_title
        %a{href: item.url, target: '_blank'}= item.title
    - if item.pub_date
      .date= item.pub_date.strftime('%b %d, %Y')
  .content{'class' => item.extra_css}
    - if item.previous
      %a.previous{href: '#', 'data-id' => item.id}
        .left
          .arrow
    - if item.next
      %a.next{href: '#', 'data-id' => item.id}
        .right
          .arrow
    != item.content
